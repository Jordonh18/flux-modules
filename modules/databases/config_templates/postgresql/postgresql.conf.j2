# PostgreSQL Configuration Template
# Generated by Flux Databases Module
# Memory: {{ memory_mb }}MB | CPUs: {{ cpus }} | Storage: {{ storage_gb }}GB

# Connection Settings
listen_addresses = '*'
port = {{ port }}
max_connections = {{ max_connections }}
superuser_reserved_connections = 3

# Memory Settings
shared_buffers = {{ (memory_mb * 0.25)|int }}MB
effective_cache_size = {{ (memory_mb * 0.75)|int }}MB
work_mem = {{ (memory_mb / max_connections)|int }}MB
maintenance_work_mem = {{ (memory_mb * 0.1)|int }}MB
dynamic_shared_memory_type = posix

# Checkpoint Settings
checkpoint_completion_target = 0.9
wal_buffers = 16MB
default_statistics_target = 100
random_page_cost = 1.1
effective_io_concurrency = {{ (cpus * 2)|int }}

# WAL (Write-Ahead Logging) Settings
wal_level = replica
max_wal_size = {{ (storage_gb * 1024 * 0.1)|int }}MB
min_wal_size = {{ (storage_gb * 1024 * 0.02)|int }}MB
wal_compression = on
wal_log_hints = on
archive_mode = on
archive_command = 'test ! -f {{ log_dir }}/archive/%f && cp %p {{ log_dir }}/archive/%f'

# Replication Settings
max_wal_senders = 10
max_replication_slots = 10
hot_standby = on
wal_receiver_status_interval = 10s
hot_standby_feedback = on

# Query Tuning
random_page_cost = 1.1
cpu_tuple_cost = 0.01
cpu_index_tuple_cost = 0.005
cpu_operator_cost = 0.0025

# Planner Settings
default_statistics_target = 100
constraint_exclusion = partition
cursor_tuple_fraction = 0.1
from_collapse_limit = 8
join_collapse_limit = 8

# Logging Settings
logging_collector = on
log_directory = '{{ log_dir }}'
log_filename = 'postgresql-%Y-%m-%d_%H%M%S.log'
log_rotation_age = 1d
log_rotation_size = 100MB
log_truncate_on_rotation = on
log_line_prefix = '%m [%p] %u@%d '
log_timezone = 'UTC'

# What to Log
log_checkpoints = on
log_connections = on
log_disconnections = on
log_duration = off
log_lock_waits = on
log_statement = 'ddl'
log_temp_files = 0
log_autovacuum_min_duration = 0

# Slow Query Logging
log_min_duration_statement = 1000

# Locale and Formatting
datestyle = 'iso, mdy'
timezone = 'UTC'
lc_messages = 'en_US.utf8'
lc_monetary = 'en_US.utf8'
lc_numeric = 'en_US.utf8'
lc_time = 'en_US.utf8'
default_text_search_config = 'pg_catalog.english'

# Autovacuum Settings
autovacuum = on
autovacuum_max_workers = {{ (cpus / 2)|int if cpus > 1 else 1 }}
autovacuum_naptime = 60s
autovacuum_vacuum_threshold = 50
autovacuum_analyze_threshold = 50
autovacuum_vacuum_scale_factor = 0.1
autovacuum_analyze_scale_factor = 0.05
autovacuum_vacuum_cost_delay = 2ms
autovacuum_vacuum_cost_limit = -1

# Client Connection Defaults
statement_timeout = 0
lock_timeout = 0
idle_in_transaction_session_timeout = 0
client_encoding = utf8

# Background Writer
bgwriter_delay = 200ms
bgwriter_lru_maxpages = 100
bgwriter_lru_multiplier = 2.0

# Asynchronous Behavior
max_worker_processes = {{ cpus|int }}
max_parallel_workers_per_gather = {{ (cpus / 2)|int if cpus > 1 else 1 }}
max_parallel_workers = {{ cpus|int }}
max_parallel_maintenance_workers = {{ (cpus / 2)|int if cpus > 1 else 1 }}

{% if tls_enabled %}
# TLS/SSL Configuration
ssl = on
ssl_cert_file = '{{ tls_cert_path }}'
ssl_key_file = '{{ tls_key_path }}'
ssl_ca_file = '{{ tls_cert_path }}'
ssl_min_protocol_version = 'TLSv1.2'
ssl_prefer_server_ciphers = on
{% endif %}

# Data Directory
data_directory = '{{ data_dir }}'
hba_file = '{{ data_dir }}/pg_hba.conf'
ident_file = '{{ data_dir }}/pg_ident.conf'

# Unix Socket
unix_socket_directories = '/var/run/postgresql'
