# MariaDB Configuration Template
# Generated by Flux Databases Module
# Memory: {{ memory_mb }}MB | CPUs: {{ cpus }} | Storage: {{ storage_gb }}GB

[mysqld]
# Basic Settings
port = {{ port }}
datadir = {{ data_dir }}
socket = /var/run/mysqld/mysqld.sock
pid-file = /var/run/mysqld/mysqld.pid

# Connection Settings
max_connections = {{ max_connections }}
max_connect_errors = 100000
max_allowed_packet = 256M
wait_timeout = 28800
interactive_timeout = 28800
connect_timeout = 10

# Character Set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# InnoDB Settings
default-storage-engine = InnoDB
innodb_buffer_pool_size = {{ (memory_mb * 0.7)|int }}M
innodb_log_file_size = {{ (memory_mb * 0.1)|int }}M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000
innodb_read_io_threads = {{ (cpus / 2)|int if cpus > 1 else 1 }}
innodb_write_io_threads = {{ (cpus / 2)|int if cpus > 1 else 1 }}
innodb_buffer_pool_instances = {{ (cpus / 2)|int if cpus > 1 else 1 }}
innodb_adaptive_hash_index = ON
innodb_flush_neighbors = 0
innodb_checksum_algorithm = crc32

# Thread Pool (MariaDB-specific)
thread_handling = pool-of-threads
thread_pool_size = {{ cpus|int }}
thread_pool_max_threads = {{ max_connections }}
thread_cache_size = {{ (max_connections / 10)|int }}
thread_stack = 256K

# Query Cache (MariaDB still supports it)
query_cache_type = 1
query_cache_size = {{ (memory_mb * 0.05)|int }}M
query_cache_limit = 2M

# Aria Storage Engine Settings (MariaDB-specific)
aria_pagecache_buffer_size = {{ (memory_mb * 0.05)|int }}M
aria_sort_buffer_size = 8M

# Logging
log-error = {{ log_dir }}/error.log
slow_query_log = 1
slow_query_log_file = {{ log_dir }}/slow.log
long_query_time = 2
log_queries_not_using_indexes = 0
log_slow_verbosity = query_plan,explain

# Binary Logging
log_bin = {{ log_dir }}/mariadb-bin
binlog_format = ROW
binlog_expire_logs_seconds = 604800
max_binlog_size = 100M
sync_binlog = 1
binlog_cache_size = 1M

# General Log (disabled by default for performance)
general_log = 0
general_log_file = {{ log_dir }}/general.log

# Performance Schema
performance_schema = ON

# Temporary Tables
tmp_table_size = {{ (memory_mb * 0.05)|int }}M
max_heap_table_size = {{ (memory_mb * 0.05)|int }}M
tmpdir = {{ data_dir }}/tmp

# MyISAM Settings
key_buffer_size = 32M
myisam_sort_buffer_size = 8M
myisam_recover_options = BACKUP,FORCE

# Security
local_infile = 0
skip-name-resolve = 1
skip-symbolic-links = 1

# Optimizer
optimizer_search_depth = 5
optimizer_prune_level = 1
optimizer_switch = 'index_merge=on,index_merge_union=on,index_merge_sort_union=on,index_merge_intersection=on,engine_condition_pushdown=on'

# Table Settings
table_open_cache = {{ (max_connections * 2)|int }}
table_definition_cache = {{ (max_connections)|int }}
open_files_limit = {{ (max_connections * 5)|int }}

# Join Buffer
join_buffer_size = {{ (memory_mb / max_connections / 10)|int }}M

# Sort Buffer
sort_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 2M

{% if tls_enabled %}
# TLS/SSL Configuration
require_secure_transport = ON
ssl-ca = {{ tls_cert_path }}
ssl-cert = {{ tls_cert_path }}
ssl-key = {{ tls_key_path }}
tls_version = TLSv1.2,TLSv1.3
{% endif %}

[mysql]
socket = /var/run/mysqld/mysqld.sock
default-character-set = utf8mb4

[client]
port = {{ port }}
socket = /var/run/mysqld/mysqld.sock
default-character-set = utf8mb4
{% if tls_enabled %}
ssl-ca = {{ tls_cert_path }}
ssl-cert = {{ tls_cert_path }}
ssl-key = {{ tls_key_path }}
{% endif %}

[mysqldump]
quick
quote-names
max_allowed_packet = 256M
default-character-set = utf8mb4

[isamchk]
key_buffer_size = 16M
