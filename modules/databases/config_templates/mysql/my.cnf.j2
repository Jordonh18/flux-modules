# MySQL Configuration Template
# Generated by Flux Databases Module
# Memory: {{ memory_mb }}MB | CPUs: {{ cpus }} | Storage: {{ storage_gb }}GB

[mysqld]
# Basic Settings
port = {{ port }}
datadir = {{ data_dir }}
socket = /var/run/mysqld/mysqld.sock
pid-file = /var/run/mysqld/mysqld.pid

# Connection Settings
max_connections = {{ max_connections }}
max_connect_errors = 100000
max_allowed_packet = 256M
wait_timeout = 28800
interactive_timeout = 28800

# Character Set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# InnoDB Settings
default-storage-engine = InnoDB
innodb_buffer_pool_size = {{ (memory_mb * 0.7)|int }}M
innodb_log_file_size = {{ (memory_mb * 0.1)|int }}M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000

# Query Cache (disabled in MySQL 8.0+, keeping for 5.7 compatibility)
query_cache_type = 0
query_cache_size = 0

# Thread Pool
thread_cache_size = {{ (max_connections / 10)|int }}
thread_stack = 256K

# Logging
log-error = {{ log_dir }}/error.log
slow_query_log = 1
slow_query_log_file = {{ log_dir }}/slow.log
long_query_time = 2
log_queries_not_using_indexes = 0

# Binary Logging
log_bin = {{ log_dir }}/mysql-bin
binlog_format = ROW
binlog_expire_logs_seconds = 604800
max_binlog_size = 100M
sync_binlog = 1

# General Log (disabled by default for performance)
general_log = 0
general_log_file = {{ log_dir }}/general.log

# Performance Schema
performance_schema = ON
performance-schema-instrument = 'stage/%=ON'
performance-schema-consumer-events-stages-current = ON

# Temporary Tables
tmp_table_size = {{ (memory_mb * 0.05)|int }}M
max_heap_table_size = {{ (memory_mb * 0.05)|int }}M

# MyISAM Settings (for system tables)
key_buffer_size = 32M
myisam_sort_buffer_size = 8M

# Security
local_infile = 0
skip-name-resolve = 1
skip-symbolic-links = 1

{% if tls_enabled %}
# TLS/SSL Configuration
require_secure_transport = ON
ssl-ca = {{ tls_cert_path }}
ssl-cert = {{ tls_cert_path }}
ssl-key = {{ tls_key_path }}
tls_version = TLSv1.2,TLSv1.3
{% endif %}

[mysql]
socket = /var/run/mysqld/mysqld.sock

[client]
port = {{ port }}
socket = /var/run/mysqld/mysqld.sock
default-character-set = utf8mb4
{% if tls_enabled %}
ssl-ca = {{ tls_cert_path }}
ssl-cert = {{ tls_cert_path }}
ssl-key = {{ tls_key_path }}
{% endif %}
