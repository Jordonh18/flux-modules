<?xml version="1.0"?>
<!-- ClickHouse Configuration Template -->
<!-- Generated by Flux Databases Module -->
<!-- Memory: {{ memory_mb }}MB | CPUs: {{ cpus }} | Storage: {{ storage_gb }}GB -->

<clickhouse>
    <!-- Network Settings -->
    <listen_host>0.0.0.0</listen_host>
    <tcp_port>{{ port }}</tcp_port>
    <http_port>{{ port + 1 }}</http_port>
    <interserver_http_port>{{ port + 2 }}</interserver_http_port>
    
    <!-- Data Paths -->
    <path>{{ data_dir }}</path>
    <tmp_path>{{ data_dir }}/tmp/</tmp_path>
    <user_files_path>{{ data_dir }}/user_files/</user_files_path>
    <format_schema_path>{{ data_dir }}/format_schemas/</format_schema_path>

    <!-- Logging -->
    <logger>
        <level>information</level>
        <log>{{ log_dir }}/clickhouse-server.log</log>
        <errorlog>{{ log_dir }}/clickhouse-server.err.log</errorlog>
        <size>100M</size>
        <count>10</count>
        <console>false</console>
    </logger>

    <!-- Memory Management -->
    <max_server_memory_usage>{{ (memory_mb * 1024 * 1024 * 0.9)|int }}</max_server_memory_usage>
    <max_thread_pool_size>{{ (cpus * 2)|int }}</max_thread_pool_size>
    <max_concurrent_queries>{{ max_connections }}</max_concurrent_queries>
    <max_connections>{{ max_connections * 2 }}</max_connections>
    
    <!-- Query Limits -->
    <max_memory_usage>{{ (memory_mb * 1024 * 1024 * 0.3)|int }}</max_memory_usage>
    <max_bytes_before_external_group_by>{{ (memory_mb * 1024 * 1024 * 0.2)|int }}</max_bytes_before_external_group_by>
    <max_bytes_before_external_sort>{{ (memory_mb * 1024 * 1024 * 0.2)|int }}</max_bytes_before_external_sort>
    
    <!-- Performance Settings -->
    <background_pool_size>{{ (cpus / 2)|int if cpus > 1 else 1 }}</background_pool_size>
    <background_schedule_pool_size>{{ (cpus / 2)|int if cpus > 1 else 1 }}</background_schedule_pool_size>
    <background_fetches_pool_size>{{ (cpus / 2)|int if cpus > 1 else 1 }}</background_fetches_pool_size>
    <background_move_pool_size>{{ (cpus / 4)|int if cpus > 3 else 1 }}</background_move_pool_size>
    <background_common_pool_size>{{ (cpus / 2)|int if cpus > 1 else 1 }}</background_common_pool_size>
    
    <!-- Compression -->
    <compression>
        <case>
            <min_part_size>10485760</min_part_size>
            <min_part_size_ratio>0.01</min_part_size_ratio>
            <method>lz4</method>
        </case>
    </compression>

    <!-- MergeTree Settings -->
    <merge_tree>
        <max_suspicious_broken_parts>5</max_suspicious_broken_parts>
        <parts_to_delay_insert>150</parts_to_delay_insert>
        <parts_to_throw_insert>300</parts_to_throw_insert>
        <max_bytes_to_merge_at_max_space_in_pool>{{ (storage_gb * 1024 * 1024 * 1024 * 0.1)|int }}</max_bytes_to_merge_at_max_space_in_pool>
        <max_bytes_to_merge_at_min_space_in_pool>1048576</max_bytes_to_merge_at_min_space_in_pool>
    </merge_tree>

    <!-- Built-in Users -->
    <users>
        <{{ username }}>
            <password>{{ password }}</password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
        </{{ username }}>
    </users>

    <!-- Profiles -->
    <profiles>
        <default>
            <max_memory_usage>{{ (memory_mb * 1024 * 1024 * 0.3)|int }}</max_memory_usage>
            <use_uncompressed_cache>1</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
            <log_queries>1</log_queries>
            <log_query_threads>1</log_query_threads>
            <max_execution_time>300</max_execution_time>
            <max_rows_to_read>0</max_rows_to_read>
            <max_bytes_to_read>0</max_bytes_to_read>
        </default>
    </profiles>

    <!-- Quotas -->
    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>

{% if tls_enabled %}
    <!-- TLS/SSL Configuration -->
    <openSSL>
        <server>
            <certificateFile>{{ tls_cert_path }}</certificateFile>
            <privateKeyFile>{{ tls_key_path }}</privateKeyFile>
            <verificationMode>none</verificationMode>
            <loadDefaultCAFile>true</loadDefaultCAFile>
            <cacheSessions>true</cacheSessions>
            <disableProtocols>sslv2,sslv3</disableProtocols>
            <preferServerCiphers>true</preferServerCiphers>
        </server>
    </openSSL>
    <tcp_port_secure>{{ port + 10 }}</tcp_port_secure>
    <https_port>{{ port + 11 }}</https_port>
{% endif %}

    <!-- Distributed Settings -->
    <distributed_ddl>
        <path>/clickhouse/task_queue/ddl</path>
    </distributed_ddl>

    <!-- Query Log -->
    <query_log>
        <database>system</database>
        <table>query_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </query_log>

    <!-- Query Thread Log -->
    <query_thread_log>
        <database>system</database>
        <table>query_thread_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </query_thread_log>

    <!-- Mark Cache -->
    <mark_cache_size>{{ (memory_mb * 1024 * 1024 * 0.05)|int }}</mark_cache_size>

    <!-- Uncompressed Cache -->
    <uncompressed_cache_size>{{ (memory_mb * 1024 * 1024 * 0.1)|int }}</uncompressed_cache_size>

    <!-- Timezone -->
    <timezone>UTC</timezone>
</clickhouse>
